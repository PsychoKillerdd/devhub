<!-- Estilos personalizados -->
<style>
  /* Oculta los controles de Splide para un slider limpio */
  .splide__arrows,
  .splide__pagination {
    display: none !important;
  }

  /* Fuerza un tamaño uniforme para todos los SVG en cada slide */
  .splide__slide svg {
    max-width: 40px;
    max-height: 40px;
    width: 40px;
    height: 40px;
    margin: auto;
  }
</style>

<!-- Carga la versión de Splide y la extensión AutoScroll desde CDN -->
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js" is:inline></script>
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide-extension-auto-scroll@0.5.3/dist/js/splide-extension-auto-scroll.min.js"></script>

<!-- Inicialización de Splide con AutoScroll -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var splide = new Splide('.splide', {
      type       : 'loop',
      perPage    : 3,            // 3 slides visibles en escritorio y tablet
      perMove    : 1,
      fixedWidth : '100px',      // Ancho fijo de cada slide (puedes ajustarlo si lo requieres)
      gap        : '1rem',
      arrows     : false,
      pagination : false,
      breakpoints: {
        640: { perPage: 2 }     // En móvil se muestran 2 slides
      },
      /* La configuración del auto scroll se encarga de que el slider
         avance continuamente sin detenerse al pasar el mouse o recibir focus */
      autoScroll: {
        speed         : 1,            // Ajusta la velocidad del scroll
        pauseOnHover  : false,
        pauseOnFocus  : false,
      },
    });

    // Se monta Splide incluyendo la extensión AutoScroll (esta extensión se declara globalmente desde el CDN)
    splide.mount({ AutoScroll: window.AutoScroll });
  });
</script>
