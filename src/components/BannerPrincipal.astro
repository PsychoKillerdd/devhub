<!-- Estilos personalizados -->
<style>
  /* Oculta los controles de Splide para un slider limpio */
  .splide__arrows,
  .splide__pagination {
    display: none !important;
  }
</style>

<!-- Inicialización de Splide -->
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js" is:inline></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Splide('.splide', {
      type: 'loop',
      perPage: 4,
      perMove: 1,
      autoplay: true,
      interval: 1500,
      pauseOnHover: false,
      pauseOnFocus: false,
      arrows: false,
      pagination: false,
      fixedWidth: '100px',
      gap: '1rem',
      breakpoints: {
        640: { perPage: 2 },
        1024: { perPage: 3 }
      }
    }).mount();
  });
</script>
