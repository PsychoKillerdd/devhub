---
import { onMount } from 'astro/client';
---

<html lang="en">
  <head>
    <title>Navbar con Floating UI</title>
    <script type="module">
      import { computePosition, offset, flip, shift, autoUpdate } from 'https://esm.sh/@floating-ui/dom';

      document.addEventListener('DOMContentLoaded', () => {
        const button = document.querySelector('#menu-button');
        const dropdown = document.querySelector('#menu-dropdown');

        if (!button || !dropdown) return;

        let cleanup = autoUpdate(button, dropdown, () => {
          computePosition(button, dropdown, {
            placement: 'bottom-start',
            middleware: [offset(8), flip(), shift()],
          }).then(({ x, y }) => {
            Object.assign(dropdown.style, {
              left: `${x}px`,
              top: `${y}px`,
            });
          });
        });

        button.addEventListener('click', () => {
          dropdown.classList.toggle('hidden');
        });
      });
    </script>

    <style>
      .dropdown-menu {
        position: absolute;
        background: white;
        border: 1px solid #ccc;
        padding: 0.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        min-width: 160px;
      }

      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background-color: #111;
        color: white;
      }

      .nav button {
        background: #333;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 0.3rem;
        cursor: pointer;
      }

      .nav button:hover {
        background-color: #555;
      }
    </style>
  </head>
  <body>
    <nav class="nav">
      <div>Mi Web</div>
      <div>
        <button id="menu-button">Men√∫</button>
        <div id="menu-dropdown" class="dropdown-menu hidden">
          <a href="#">Inicio</a><br />
          <a href="#">Servicios</a><br />
          <a href="#">Contacto</a>
        </div>
      </div>
    </nav>
  </body>
</html>
