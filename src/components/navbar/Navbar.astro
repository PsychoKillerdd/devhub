---
import { onMount } from 'astro/client';
---

<nav class="navbar">
  <div class="navbar-container">
    <div class="logo">MiSitio</div>

    <div class="nav-links">
      <a href="/">Inicio</a>
      <a href="/servicios">Servicios</a>
      <a href="/contacto">Contacto</a>
    </div>

    <div class="dropdown-wrapper">
      <button id="menu-button">Men√∫</button>
      <div id="menu-dropdown" class="dropdown-menu hidden">
        <a href="/">Inicio</a>
        <a href="/servicios">Servicios</a>
        <a href="/contacto">Contacto</a>
      </div>
    </div>
  </div>
</nav>

<style>
  .navbar {
    background-color: #111;
    color: white;
    padding: 1rem;
  }

  .navbar-container {
    max-width: 1024px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: white;
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }

  .nav-links a:hover {
    color: black;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: yellow;
    transition: width 0.3s ease;
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .dropdown-wrapper {
    position: relative;
  }

  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    color: black;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
    padding: 0.75rem;
    margin-top: 0.5rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    min-width: 150px;
    z-index: 999;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.5rem 0;
    text-decoration: none;
    color: black;
  }

  .dropdown-menu a:hover {
    color: #111;
    font-weight: bold;
  }

  .hidden {
    display: none;
  }
</style>

<script is:inline>
  import {
    computePosition,
    autoUpdate,
    offset,
    flip,
    shift,
  } from 'https://esm.sh/@floating-ui/dom';

  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('#menu-button');
    const dropdown = document.querySelector('#menu-dropdown');

    if (!button || !dropdown) return;

    let cleanup = autoUpdate(button, dropdown, () => {
      computePosition(button, dropdown, {
        placement: 'bottom-end',
        middleware: [offset(6), flip(), shift()],
      }).then(({ x, y }) => {
        Object.assign(dropdown.style, {
          left: `${x}px`,
          top: `${y}px`,
        });
      });
    });

    button.addEventListener('click', () => {
      dropdown.classList.toggle('hidden');
    });
  });
</script>
